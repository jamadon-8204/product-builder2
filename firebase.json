{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".wrangler",
      "install.cmd",
      "firebase-debug.log",
      ".git",
      ".idx",
      ".vscode",
      ".claude",
      "node_modules"
    ],
    "rewrites": [
      {
        "source": "/palantir",
        "destination": "/palantir.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=3600"
          }
        ]
      }
    ]
  }
}
